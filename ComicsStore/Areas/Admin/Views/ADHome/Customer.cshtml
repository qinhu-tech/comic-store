@model IEnumerable<ComicsStore.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Customer</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneCus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailCus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassCus)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.GenderCus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassCus)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.GenderCus)
        </td>
        <td>
            <a href="/Customers/Edit/@item.IDCus">Chỉnh Sửa</a>   |
            <a href="/Customers/Delete/@item.IDCus">Xóa</a>
        </td>
    </tr>
}

</table>

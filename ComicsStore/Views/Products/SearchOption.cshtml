@model IEnumerable<ComicsStore.Models.Product>

@{
    ViewBag.Title = "SearchOption";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<head>
    <link href="~/Content/ProViewStyle.css" rel="stylesheet" />


    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm("SearchOption", "Products"))
    {
        <p>Từ</p>
        <input type="number" name="min" />
        <p>Đến</p>
        <input type="number" name="max" />
        <input type="submit" value="search" />


        <ul class="listing">
            @foreach (var pro in Model)
            {

                <li class="product">
                    <a class="img-wrapper" href="~/Products/Details/@pro.ProductID">
                        <img src="@Url.Content(pro.ImagePro)" height="240" width="240" alt="Blue running shoe" />
                    </a>

                    <div class="info">
                        <div class="title">@Html.DisplayFor(model => pro.NamePro)</div>
                        <div class="price">@Html.DisplayFor(model => pro.Price)</div>
                    </div>

                    <div class="actions-wrapper">
                        <a href="#" class="add-btn wishlist">Lưu</a>
                        <a href="~/Cart/AddToCart/@pro.ProductID" class="add-btn cart">Thêm vào giỏ hàng</a>
                    </div>
                </li>

            }
        </ul>


    }

</body>

